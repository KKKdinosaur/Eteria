        let modules = [];
        let nextId = 1;
        let openDropdownId = null;

        function addModule() {
            const module = {
                id: nextId++,
                set: 'í†µì°°',
                matrix: 2,
                substatCount: 4,
                substats: {},
                searchText: ''
            };
            modules.push(module);
            renderModules();
        }

        function removeModule(id) {
            modules = modules.filter(m => m.id !== id);
            renderModules();
        }

        function updateSet(id, setName) {
            const module = modules.find(m => m.id === id);
            if (module) {
                module.set = setName;
                module.substats = {};
                module.searchText = '';
                openDropdownId = null;
                renderModules();
            }
        }

        function updateSearchText(id, text) {
            const module = modules.find(m => m.id === id);
            if (module) {
                module.searchText = text;
                openDropdownId = id;
                renderModules();
            }
        }

        function toggleDropdown(id) {
            openDropdownId = openDropdownId === id ? null : id;
            renderModules();
        }

        function closeDropdown() {
            openDropdownId = null;
            renderModules();
        }

        // í´ë¦­ ì™¸ë¶€ ê°ì§€
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.set-search-wrapper')) {
                if (openDropdownId !== null) {
                    closeDropdown();
                }
            }
        });

        function updateMatrix(id, matrix) {
            const module = modules.find(m => m.id === id);
            if (module) {
                module.matrix = parseInt(matrix);
                renderModules();
            }
        }

        function updateSubstatCount(id, count) {
            const module = modules.find(m => m.id === id);
            if (module) {
                module.substatCount = parseInt(count);
                module.substats = {};
                renderModules();
            }
        }

        function toggleSubstat(id, stat) {
            const module = modules.find(m => m.id === id);
            if (module) {
                const selectedCount = Object.values(module.substats).filter(v => v).length;
                
                if (module.substats[stat]) {
                    module.substats[stat] = false;
                } else if (selectedCount < module.substatCount) {
                    module.substats[stat] = true;
                }
                
                renderModules();
            }
        }

        function evaluateModule(module) {
            const selectedStats = Object.keys(module.substats).filter(s => module.substats[s]);
            const good = goodStats[module.set] || [];
            const currentSet = sets.find(s => s.name === module.set);
            
            const goodCount = selectedStats.filter(s => good.includes(s)).length;
            const totalCount = selectedStats.length;
            
            if (totalCount === 0) {
                return { status: 'empty', text: 'ì˜µì…˜ ë¯¸ì„ íƒ' };
            }
            
            // ë¶€ê°€ ëŠ¥ë ¥ì¹˜ 1~2ê°œëŠ” ë¬´ì¡°ê±´ íŒë§¤
            if (module.substatCount <= 2) {
                return { status: 'sell', text: 'íŒë§¤ (ëŠ¥ë ¥ì¹˜ ë¶€ì¡±)' };
            }
            
            // 12í”¼ìŠ¤ ì„¸íŠ¸
            if (currentSet.type === 12) {
                if (module.matrix === 3) {
                    // ë§¤íŠ¸ë¦­ìŠ¤ 3: ì¢‹ì€ ì˜µì…˜ 2ê°œ ì´ìƒì´ë©´ ë³´ê´€
                    if (goodCount >= 3) {
                        return { status: 'keep', text: 'ë³´ê´€ í•„ìˆ˜ (ë©”ì¸)' };
                    }
                    if (goodCount >= 2) {
                        return { status: 'good', text: 'ë³´ê´€ ê¶Œì¥ (ë©”ì¸)' };
                    }
                    return { status: 'sell', text: 'íŒë§¤ ì¶”ì²œ' };
                } else if (module.matrix === 2) {
                    // ë§¤íŠ¸ë¦­ìŠ¤ 2: ì¢‹ì€ ì˜µì…˜ 3ê°œ ì´ìƒì´ë©´ ë³´ê´€
                    if (goodCount >= 3) {
                        return { status: 'keep', text: 'ë³´ê´€ í•„ìˆ˜ (ì„œë¸Œ)' };
                    }
                    return { status: 'sell', text: 'íŒë§¤ (ì„œë¸Œìš© ë¶€ì¡±)' };
                }
            }
            
            // 8í”¼ìŠ¤ ì„¸íŠ¸
            if (currentSet.type === 8) {
                if (module.matrix === 3) {
                    // ë§¤íŠ¸ë¦­ìŠ¤ 3: ì¢‹ì€ ì˜µì…˜ 2ê°œ ì´ìƒì´ë©´ ë³´ê´€
                    if (goodCount >= 3) {
                        return { status: 'keep', text: 'ë³´ê´€ í•„ìˆ˜ (ë©”ì¸)' };
                    }
                    if (goodCount >= 2) {
                        return { status: 'good', text: 'ë³´ê´€ ê¶Œì¥ (ë©”ì¸)' };
                    }
                    return { status: 'sell', text: 'íŒë§¤ ì¶”ì²œ' };
                } else if (module.matrix === 2) {
                    // ë§¤íŠ¸ë¦­ìŠ¤ 2: ì¢‹ì€ ì˜µì…˜ 2ê°œ ì´ìƒì´ë©´ ë³´ê´€
                    if (goodCount >= 2) {
                        return { status: 'good', text: 'ë³´ê´€ ê¶Œì¥ (ì„œë¸Œ)' };
                    }
                    return { status: 'sell', text: 'íŒë§¤ (ì„œë¸Œìš© ë¶€ì¡±)' };
                }
            }
            
            return { status: 'sell', text: 'íŒë§¤ ì¶”ì²œ' };
        }

        function renderModules() {
            const container = document.getElementById('modules-container');
            
            if (modules.length === 0) {
                container.innerHTML = '<div class="empty-state">ëª¨ë“ˆì„ ì¶”ê°€í•˜ì—¬ ì‹œì‘í•˜ì„¸ìš”</div>';
                return;
            }
            
            container.innerHTML = modules.map(module => {
                const evaluation = evaluateModule(module);
                const good = goodStats[module.set] || [];
                const selectedCount = Object.values(module.substats).filter(v => v).length;
                const currentSet = sets.find(s => s.name === module.set);
                
                // ê²€ìƒ‰ í•„í„°ë§
                const searchLower = module.searchText.toLowerCase();
                const filteredSets = sets.filter(set => 
                    set.name.toLowerCase().includes(searchLower)
                );
                const isDropdownOpen = openDropdownId === module.id;
                
                return `
                    <div class="module-card ${evaluation.status}">
                        <div class="module-header">
                            <div class="module-info">
                                <div class="set-search-wrapper">
                                    <input 
                                        type="text" 
                                        class="set-search-input" 
                                        placeholder="ì„¸íŠ¸ ê²€ìƒ‰..."
                                        value="${module.searchText === '' ? currentSet.icon + ' ' + currentSet.name : module.searchText}"
                                        onfocus="this.select(); toggleDropdown(${module.id})"
                                        oninput="updateSearchText(${module.id}, this.value); event.stopPropagation();"
                                        onkeydown="event.stopPropagation();"
                                    />
                                    <div class="set-dropdown ${isDropdownOpen ? 'show' : ''}">
                                        ${filteredSets.map(set => `
                                            <div 
                                                class="set-dropdown-item ${module.set === set.name ? 'selected' : ''}"
                                                onclick="updateSet(${module.id}, '${set.name}')"
                                            >
                                                <span>${set.icon}</span>
                                                <span>${set.name}</span>
                                            </div>
                                        `).join('')}
                                        ${filteredSets.length === 0 ? '<div class="set-dropdown-item" style="color: #999;">ê²€ìƒ‰ ê²°ê³¼ ì—†ìŒ</div>' : ''}
                                    </div>
                                </div>
                                
                                <div class="select-wrapper">
                                    <div class="select-label">ë§¤íŠ¸ë¦­ìŠ¤</div>
                                    <select class="matrix-select" onchange="updateMatrix(${module.id}, this.value)">
                                        ${[1,2,3].map(num => `
                                            <option value="${num}" ${module.matrix === num ? 'selected' : ''}>${num}</option>
                                        `).join('')}
                                    </select>
                                </div>

                                <div class="select-wrapper">
                                    <div class="select-label">ë¶€ê°€ ëŠ¥ë ¥ì¹˜</div>
                                    <select class="substat-count-select" onchange="updateSubstatCount(${module.id}, this.value)">
                                        ${[1,2,3,4].map(num => `
                                            <option value="${num}" ${module.substatCount === num ? 'selected' : ''}>${num}ê°œ</option>
                                        `).join('')}
                                    </select>
                                </div>
                                
                                <div class="status-badge ${evaluation.status}">
                                    ${evaluation.text}
                                </div>
                            </div>
                            
                            <button class="remove-btn" onclick="removeModule(${module.id})">ì‚­ì œ</button>
                        </div>
                        
                        <div class="substats-grid">
                            ${substats.map(stat => {
                                const isGood = good.includes(stat);
                                const isSelected = module.substats[stat];
                                const isDisabled = !isSelected && selectedCount >= module.substatCount;
                                
                                return `
                                    <button 
                                        class="substat-btn ${isGood ? 'good' : 'bad'} ${isSelected ? 'selected' : ''}"
                                        onclick="toggleSubstat(${module.id}, '${stat}')"
                                        ${isDisabled ? 'disabled' : ''}
                                    >
                                        ${stat}
                                    </button>
                                `;
                            }).join('')}
                        </div>
                    </div>
                `;
            }).join('');
        }

        renderModules();
    </script>
</body>
</html>
